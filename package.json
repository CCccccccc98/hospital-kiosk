{
  "name": "hospital-kiosk",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron.cjs",
  "scripts": {
    "dev": "vite",
    "dev:fullstack": "concurrently \"npm run dev\" \"cd server && npm start\"",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && cross-env ELECTRON_START_URL=http://localhost:5173 electron .\"",
    "electron:build": "npm run build && electron-builder --win portable"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "html5-qrcode": "^2.3.8",
    "lowdb": "^7.0.1",
    "lucide-react": "^0.292.0",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "vite": "^5.0.0",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.hospital.kiosk",
    "productName": "醫院掛號系統",
    "asar": false,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.cjs",
      "package.json",
      "server/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "public/icon.png"
    }
  }
}
